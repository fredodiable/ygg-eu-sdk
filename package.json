{
  "name": "ygg-eu-sdk",
  "version": "1.0.3",
  "description": "SDK TypeScript léger et zéro-dépendance pour yggapi.eu",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:check": "publint --strict",
    "dev": "tsup --watch",
    "format": "prettier --check \"{src,tests}/**/*.ts\"",
    "format:fix": "prettier --write \"{src,tests}/**/*.ts\"",
    "lint": "eslint \"{src,tests}/**/*.ts\"",
    "lint:fix": "eslint \"{src,tests}/**/*.ts\" --fix",
    "test": "vitest run --project=unit",
    "test:integration": "vitest run --project=integration",
    "test:all": "vitest run",
    "test:cov": "vitest run --coverage",
    "prepublishOnly": "npm run format && npm run lint && npm run test:cov && npm run build && npm run build:check",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fredodiable/ygg-eu-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/fredodiable/ygg-eu-sdk/issues"
  },
  "homepage": "https://github.com/fredodiable/ygg-eu-sdk#readme",
  "keywords": [
    "ygg",
    "api",
    "sdk",
    "typescript",
    "torrent",
    "yggapi"
  ],
  "author": "fredodiable",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "prettier": "^3.0.0",
    "publint": "^0.3.17",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  }
}
